# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Push a new release build to TestFlight"
  lane :beta do
    ensure_xcode_version(version: "11.1")
    increment_build_number
    build_ios_app(
      workspace: "GP920_iOS.xcworkspace",
      configuration: "Release",
      scheme: "GP920_iOS",
      silent: true,
      clean: true,
      output_name: "Release920.ipa",       # specify the name of the .ipa file to generate (including file extension)
    )
    upload_to_testflight(app_identifier: "com.bionime.GP920-iOS-Rightest-care")
    slack(message: "Successfully uploaded a new TestFlight RELEASE build")
  end

  TEST_SIMULATORS = ['iPhone 8','iPhone X']
  desc "Run Unit Tests"
  lane :tests do
    run_tests(
      workspace: "NewProject.xcworkspace",
      configuration: "Test",
      scheme: "NewProject",
      clean: true,
      devices: TEST_SIMULATORS
    )
  end

  desc "Verify XCode"
  lane :verify do
    verify_xcode(xcode_path: "/Applications/Xcode.app")
  end
end

after_all do |lane|
  # This block is called, only if the executed lane was successful
end

error do |lane, exception|
  slack(
    message: exception.message,
    success: false
  )
end

